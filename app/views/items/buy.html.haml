= render "header"
.buy
  .buy-flame
    .buy-title
      購入内容の確認
    .buy-info
      = image_tag "cards/tarou.png", class: "buy-image"
      .buy-status
        .status-name
          = "商品名:" + "#{@item.name}"
        .status-price
          = "価格:" + "#{@item.price}" + "円"
    .buy-result
      .result-title
        支払い金額 
      .result-price
        = "#{@item.price}" + "円"
    - if @user.credit_card.present?
      .credit-menu
        .menu-title
          クレジットカード情報
        .credit-info
          .credit-image
            = image_tag "cards/#{@card_src}", size: "80x60"
          .credit-date
            = "***** ***** *****" + @customer_card.last4
          .expiration-date
            .expiration-title
              有効期限 
            .expiration-info
              = @exp_month + "/" + @exp_year
      .credit-btn
        = link_to pay_item_path(item_id: @item.id), method: :post, class: "select-btn" do
          登録クレジットカードで購入する
    - else
      .nocredit-btn
        = form_tag(action: :pay, method: :post) do
          %script.payjp-button{src: "https://checkout.pay.jp", type: "text/javascript" ,"data-text": "購入する" ,"data-key": "pk_test_563a06f9327b476340f0aa79",}
.main
  = render "footer"