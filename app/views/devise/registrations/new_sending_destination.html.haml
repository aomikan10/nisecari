.loginregist
  .centerfield
    .loginregist__header
      .loginregist__logo
        = link_to root_path do
          = image_tag "/assets/logo.png"
        .registtitle
          %p 送付先住所登録
    .loginregist__form
      = form_for(@sending_destination, url: sending_destination_path, method: :post) do |f|
        = render "devise/shared/error_messages", resource: @sending_destination
        .formtitle
          送付先氏名(フルネーム) ※必須
        .loginregist__profilefield
          .formbox
            .formfield__label--short
              = f.label :destination_family_name, '名字'
            .formfield__input--short
              = f.text_field :destination_family_name, autofocus: true, autocomplete: "destination_family_name", placeholder:"例：山田"
          .formbox
            .formfield__label--short
              = f.label :destination_first_name, '名前'
            .formfield__input--short
              = f.text_field :destination_first_name, autofocus: true, autocomplete: "destination_first_name", placeholder:"例：太郎"
        .formtitle
          送付先氏名(ふりがな) ※必須
        .loginregist__profilefield
          .formbox
            .formfield__label--short
              = f.label :destination_family_name_kana, '姓(ふりがな)'
            .formfield__input--short
              = f.text_field :destination_family_name_kana, autocomplete: "destination_family_name_kana", placeholder:"例：やまだ"
          .formbox
            .formfield__label--short
              = f.label :destination_first_name_kana, '名(ふりがな)'
            .formfield__input--short
              = f.text_field :destination_first_name_kana, autocomplete: "destination_first_name_kana", placeholder:"例：たろう"
        .loginregist__form__field
          .formfield__label--normal
            = f.label :post_code, '郵便番号 ※必須'
          .formfield__input--normal
            = f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder:"例：111-1111"
        .loginregist__form__field
          .formfield__label--normal
            = f.label :prefecture_code, '都道府県 ※必須'
          .formfield__input--normal
            = f.text_field :prefecture_code, autofocus: true, autocomplete: "prefecture_code", placeholder:"例：東京都"
        .loginregist__form__field
          .formfield__label--normal
            = f.label :city, '市区町村 ※必須'
          .formfield__input--normal
            = f.text_field :city, autofocus: true, autocomplete: "city", placeholder:"例：××町"
        .loginregist__form__field
          .formfield__label--normal
            = f.label :house_number, '番地 ※必須'
          .formfield__input--normal
            = f.text_field :house_number, autofocus: true, autocomplete: "house_number", placeholder:"例：1丁目11"
        .loginregist__form__field
          .formfield__label--normal
            = f.label :phone_number, '電話番号'
          .formfield__input--normal
            = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"例：000-0000-0000"
        .loginregist__form__actions
          = f.submit "登録", class: 'ButtonNext'
        .loginregist__form__login
          %p アカウントをお持ちの方
          = render "devise/shared/links"
.loginregist__footer
  .loginregist__logo
    %image{:src => "/assets/logo-white.png"}
