.loginregist
  .centerfield
    .loginregist__header
      .loginregist__logo
        = link_to root_path do
          = image_tag "material/logo/logo.png"
        .registtitle
          %p 本人確認情報
    .loginregist__form
      = form_for(@profile, url: profiles_path, method: :post) do |f|
        .formtitle
          お名前(フルネーム)
          %span.important
            必須
        .loginregist__profilefield
          .formbox
            .formfield__label--short
              = f.label :family_name, '名字'
            .formfield__input--short
              = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder:"例：山田"
            .loginregist__error
              -if @profile.errors.include?(:family_name)
                %p{style: "color: red;"}= @profile.errors.full_messages_for(:family_name).first
          .formbox
            .formfield__label--short
              = f.label :first_name, '名前'
            .formfield__input--short
              = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"例：太郎"
            .loginregist__error
              -if @profile.errors.include?(:first_name)
                %p{style: "color: red;"}= @profile.errors.full_messages_for(:first_name).first
        .formtitle
          お名前(ふりがな)
          %span.important
            必須
        .loginregist__profilefield
          .formbox
            .formfield__label--short
              = f.label :family_name_kana, '姓(ふりがな)'
            .formfield__input--short
              = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder:"例：やまだ"
            .loginregist__error
              -if @profile.errors.include?(:family_name_kana)
                %p{style: "color: red;"}= @profile.errors.full_messages_for(:family_name_kana).first
          .formbox
            .formfield__label--short
              = f.label :first_name_kana, '名(ふりがな)'
            .formfield__input--short
              = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder:"例：たろう"
            .loginregist__error
              -if @profile.errors.include?(:first_name_kana)
                %p{style: "color: red;"}= @profile.errors.full_messages_for(:first_name_kana).first
        .formtitle
          生年月日
          %span.important
            必須
        .loginregist__form__field
          .formfield__input--normal
            = f.text_field :birth_day, autofocus: true, autocomplete: "birth_day", placeholder:"例：1990/11/11"
          .loginregist__error
            -if @profile.errors.include?(:birth_day)
              %p{style: "color: red;"}= @profile.errors.full_messages_for(:birth_day).first
        .loginregist__form__field
          .formfield__label--normal
            = f.label :introduction, '自己紹介文'
            %span.important
              必須
          .formfield__input--normal
            = f.text_field :introduction, autocomplete: "introduction"
          .loginregist__error
            -if @profile.errors.include?(:introduction)
              %p{style: "color: red;"}= @profile.errors.full_messages_for(:introduction).first
        .loginregist__form__actions
          = f.submit "次へ", class: 'ButtonNext', url: "sending_destination_path"
        .loginregist__form__login
          %p アカウントをお持ちの方
          = render "devise/shared/links"
.loginregist__footer
  .loginregist__logo
    = image_tag "material/logo/logo-white.png"
