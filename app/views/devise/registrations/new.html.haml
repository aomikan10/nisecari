.loginregist
  .centerfield
    .header
      .logo
        %image{:src => "/assets/logo.png"}
        .registtitle
          %p 新規会員登録
    .loginregist__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .formfield__label--normal
            = f.label :nickname, 'ニックネーム ※必須'
          .formfield__input--normal
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
        .field
          .formfield__label--normal
            = f.label :email, 'email ※必須'
          .formfield__input--normal
            = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          .formfield__label--normal
            = f.label :password, 'パスワード ※必須'
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
          .formfield__input--normal
            = f.password_field :password, autocomplete: "new-password"
        .field
          .formfield__label--normal
            = f.label :password_confirmation, 'パスワード'
            %i (再入力)
          .formfield__input--normal
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "次へ", class: 'ButtonNext'
.footer
  .logo
    %image{:src => "/assets/logo-white.png"}
