.loginregist
  .centerfield
    .header
      .logo
        %image{:src => "/assets/logo.png"}
        .registtitle
          %p 新規会員登録
    .loginregist__form
      = form_with  do |f|
        .formfield
          .formfield__label--normal
            = f.label :nickname, 'ニックネーム ※必須'
          .formfield__input--normal
            = f.text_field :nickname, autofocus: true
        .formfield
          .formfield__label--normal
            = f.label :email, 'メールアドレス ※必須'
          .formfield__input--normal
            = f.text_field :email
        .formfield
          .formfield__label--normal
            = f.label :password, 'パスワード ※必須'
            %i (英数字7文字以上)
          .formfield__input--normal
            = f.text_field :password, autocomplete: "off"
        .formfield
          .formfield__label--normal
            = f.label :password_confirmation, 'パスワード'
            %i (再入力)
          .formfield__input--normal
            = f.text_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "次へ", class: 'ButtonNext'
.footer
  .logo
    %image{:src => "/assets/logo-white.png"}
